@page "/admin/image/{Paths}/{Slider}"

@inject Radzen.DialogService dialogService

@if (Slider)
{
    <RadzenStack Style="height: 100%;" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center" AlignItems="AlignItems.Center">
        <RadzenButton Variant="Variant.Flat" Click="Previous">
            <RadzenIcon Icon="chevron_left" Style="font-size: 20px" />
        </RadzenButton>
        <RadzenImage Path="@Paths[index]?.short_path" Style="width: 90%; height: 100%; object-fit: cover;" />
        <RadzenButton Variant="Variant.Flat" Click="Next">
            <RadzenIcon Icon="chevron_right" Style="font-size: 20px" />
        </RadzenButton>
    </RadzenStack>
}
else
{
    <RadzenImage Path="@Paths[0]?.short_path" Style="width: 100%; height: 100%; object-fit: cover;" />
}